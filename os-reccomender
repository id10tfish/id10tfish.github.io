<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>OS Recommender Chat</title>
<style>
  body { font-family: Arial; max-width: 600px; margin: 20px auto; background: #f9f9f9; padding: 10px; }
  #chat { border: 1px solid #ccc; padding: 10px; height: 250px; overflow-y: auto; margin-bottom: 10px; background: #fff; }
  .message { margin: 5px 0; padding: 8px 10px; border-radius: 5px; max-width: 80%; word-wrap: break-word; }
  .user { background-color: #d1e7dd; text-align: right; margin-left: auto; }
  .bot { background-color: #f8d7da; text-align: left; margin-right: auto; }
  input[type=text] { width: 75%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; }
  button { width: 20%; padding: 8px; border-radius: 5px; border: none; background: #007bff; color: white; cursor: pointer; }
  button:disabled { background: #aaa; }
  table { border-collapse: collapse; width: 100%; margin-top: 10px; }
  table, th, td { border: 1px solid black; padding: 5px; }
  th { background-color: #e2e3e5; }
</style>
</head>
<body>

<h1>OS Recommender Chat</h1>

<div id="chat"></div>
<input type="text" id="user-input" placeholder="Type your message..." />
<button id="send-btn">Send</button>
<div id="comparison-table"></div>

<script type="module">
import OpenAI from "https://cdn.jsdelivr.net/npm/openai@latest/dist/openai-browser.min.js";

// ðŸš¨ INSERT **YOUR** PUTER.JS / OPENAI KEY HERE
const client = new OpenAI({
    apiKey: sk-mnopqrstuvwxabcdmnopqrstuvwxabcdmnopqrst
    dangerouslyAllowBrowser: true
});

const chat = document.getElementById('chat');
const inputField = document.getElementById('user-input');
const sendBtn = document.getElementById('send-btn');
const comparisonTableDiv = document.getElementById('comparison-table');

function addMessage(text, sender) {
  const msg = document.createElement('div');
  msg.classList.add('message', sender);
  msg.textContent = text;
  chat.appendChild(msg);
  chat.scrollTop = chat.scrollHeight;
}

function showComparisonTable() {
  comparisonTableDiv.innerHTML = `
    <h2>OS Comparison Table</h2>
    <table>
      <thead>
        <tr><th>OS</th><th>Performance</th><th>Stability</th><th>Security</th><th>Gaming Support</th><th>Customizability</th></tr>
      </thead>
      <tbody>
        <tr><td>Windows 11</td><td>High</td><td>Good</td><td>Medium</td><td>Excellent</td><td>Medium</td></tr>
        <tr><td>Ubuntu</td><td>Medium</td><td>Good</td><td>High</td><td>Low</td><td>High</td></tr>
        <tr><td>Pop!_OS</td><td>Medium-High</td><td>Good</td><td>High</td><td>Medium</td><td>High</td></tr>
        <tr><td>Fedora</td><td>Medium</td><td>Good</td><td>High</td><td>Low-Medium</td><td>High</td></tr>
        <tr><td>Manjaro</td><td>High</td><td>Medium</td><td>High</td><td>Medium</td><td>High</td></tr>
        <tr><td>Bazzite</td><td>High</td><td>Medium</td><td>High</td><td>Medium</td><td>Very High</td></tr>
        <tr><td>SteamOS</td><td>Medium</td><td>Medium</td><td>High</td><td>Excellent</td><td>Medium</td></tr>
        <tr><td>CachyOS</td><td>High</td><td>Medium</td><td>High</td><td>Good</td><td>Very High</td></tr>
      </tbody>
    </table>
  `;
}

async function sendMessage() {
  const userText = inputField.value.trim();
  if (!userText) return;

  addMessage(userText, "user");
  inputField.value = "";
  sendBtn.disabled = true;

  try {
    const response = await client.chat.completions.create({
      model: "gpt-4.1-mini",
      messages: [{ role: "user", content: userText }]
    });

    const botReply = response.choices[0].message.content;
    addMessage(botReply, "bot");

    if (userText.toLowerCase().includes("table")) {
      showComparisonTable();
    }

  } catch (error) {
    addMessage("Error: " + error.message, "bot");
  }

  sendBtn.disabled = false;
}

sendBtn.addEventListener("click", sendMessage);
inputField.addEventListener("keypress", e => {
  if (e.key === "Enter") sendMessage();
});
</script>

</body>
</html>


  `;
  comparisonTableDiv.innerHTML = tableHTML;
}

async function getOpenAIResponse(userText) {
  try {
    const res = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "Authorization": `Bearer ${API_KEY}`
      },
      body: JSON.stringify({
        model: "gpt-4o-mini",
        messages: [{ role: "user", content: userText }],
        temperature: 0.7
      })
    });
    const data = await res.json();
    return data.choices[0].message.content;
  } catch (err) {
    console.error(err);
    return "Sorry, I couldn't reach OpenAI API.";
  }
}

async function handleUserInput(e = null) {
  if (e) e.preventDefault();
  const userText = inputField.value.trim();
  if (!userText) return;

  addMessage(userText, 'user');
  inputField.value = '';
  sendBtn.disabled = true;

  const botReply = await getOpenAIResponse(userText);
  addMessage(botReply, 'bot');
  showComparisonTable();

  sendBtn.disabled = false;
  inputField.focus();
}

sendBtn.addEventListener('click', handleUserInput);
inputField.addEventListener('keypress', e => { if(e.key === "Enter") handleUserInput(e); });
inputField.focus();
</script>

</body>
</html>

